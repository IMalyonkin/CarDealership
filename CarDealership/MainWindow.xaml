<Window x:Class="CarDealership.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarDealership"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="371*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="SideBar" RenderTransformOrigin="0.5,0.5" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
            <Button x:Name="button" Content="" Click="Button_Click" Height="50" VerticalAlignment="Bottom"/>
            <Button x:Name="button1" Content="" Click="Button1_Click" Height="50" VerticalAlignment="Top"/>
            <Button x:Name="button2" Content="" Click="Button2_Click" Height="50" VerticalAlignment="Top"/>
        </StackPanel>

        <Frame x:Name="Main" Source="VehiclesInStockPage.xaml" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
